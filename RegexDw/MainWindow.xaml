<dx:DXWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="RegexDw.MainWindow"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="31" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <dxe:TextEdit Margin="3" TextWrapping="Wrap" VerticalContentAlignment="Top" AcceptsReturn="True"/>
        <dxe:TextEdit Grid.Row="1" Margin="3"/>
        <dxe:TextEdit Grid.Row="2" Margin="3" TextWrapping="Wrap" VerticalContentAlignment="Top" AcceptsReturn="True"/>
    </Grid>

</dx:DXWindow>
